@import "variable/*"
@import "icon/*"
@import 'axis'
@import 'jeet'
@import 'rupture'

border-box-html()
fluid-media() //care flex box image
rupture.scale = 0 400px 600px 780px 960px 1300px
rupture.scale-names = 'xs' 'sm' 'm' 'l' 'xl' 'hd'
jeet.gutter = 1

blue = #007EBE;
darkblue = #005FA3;
deepblue = #004F8A;
bordergrey = #D1D1D1;
.main-cont
	center(1280px)
	height 100% 

body,html
	height 100%
body
	font-family Helvetica
	font-size 14px
	font-weight 300

.main-left
	span(0.2)
	background blue
	height 100%
.main-right	
	span(0.8)
	
.left-logo
	padding-left 30px
	height 75px
	border-bottom 3px solid deepblue
	flex(mid)
	justify-content flex-start
	background darkblue
	span
		color white
		font-size 30px
		font-weight 400
		line-height 24px

//.main-right

.main-right-head
	display flex
	height 75px
.main-right-head-input
	flex-grow 6
	position relative
	input
		height 75px
		border 0px
		border-bottom 3px solid deepblue
		border-top 1px solid bordergrey
		width 100%
	.icon-Search
		position absolute
		font-size 38px
		color blue
		right 20px
		top 20px	
.main-right-head-add
	height 100%
	border 1px solid bordergrey
	border-right 0
	flex-grow 1
	background #E5E9ED
	flex(mid)
	font-size 32px
	color blue
.main-right-head-message
	height 100%
	border 1px solid bordergrey
	border-right 0
	flex-grow 1
	background #E5E9ED
	flex(mid)
	font-size 32px
	color blue
	
.main-right-head-name
	border 1px solid bordergrey
	flex-grow 4
	background #E5E9ED
	
.icon-Message
	position relative
	.main-right-head-message-val
		font-size 14px
		position absolute
		right -15px
		top 5px
		height 25px
		width 25px
		border-radius 50%
		background red
		color white
		text-align center
		font-family Helvetica 
		font-size 12px
		font-weight 300
		line-height 24px