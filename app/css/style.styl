@import "variable/*"
@import "icon/*"
@import 'axis'
@import 'jeet'
@import 'rupture'

border-box-html()
fluid-media() //care flex box image
rupture.scale = 0 400px 600px 780px 960px 1300px
rupture.scale-names = 'xs' 'sm' 'm' 'l' 'xl' 'hd'
jeet.gutter = 1

blue = #007EBE;
darkblue = #005FA3;
deepblue = #004F8A;
bordergrey = #D1D1D1;
black = #413E3E;
body,html
	height 100%
body
	font-family Helvetica
	font-size 14px
	font-weight 300
	color #413E3E
	background: #06486A;

.main-cont
	center(1280px)
	display flex
	min-height 100%
.main-left
	width 22%
	background blue
.main-right	
	width 78%
	
.left-logo
	padding-left 30px
	height 75px
	border-bottom 3px solid deepblue
	flex(mid)
	justify-content flex-start
	background darkblue
	span
		color white
		font-size 30px
		font-weight 400
		line-height 24px

.main-right
	border-right 1px solid bordergrey
	background white
.main-right-head
	display flex
	height 75px
.main-right-head-input
	flex-grow 16
	position relative
	input
		height 75px
		border 0px
		border-bottom 3px solid deepblue
		border-top 1px solid bordergrey
		width 100%
		padding 0 30px
	.icon-Search
		position absolute
		font-size 38px
		color blue
		right 20px
		top 20px	
.main-right-head-add
	height 100%
	border 1px solid bordergrey
	border-right 0
	flex-grow 2
	background #E5E9ED
	flex(mid)
	font-size 32px
	color blue
.main-right-head-message
	height 100%
	border 1px solid bordergrey
	border-right 0
	flex-grow 2
	background #E5E9ED
	flex(mid)
	font-size 32px
	color blue
	
.main-right-head-name
	border 1px solid bordergrey
	flex-grow 3
	background #E5E9ED
	
.icon-Message
	position relative
	.main-right-head-message-val
		font-size 14px
		position absolute
		right -15px
		top 5px
		height 25px
		width 25px
		border-radius 50%
		background red
		color white
		text-align center
		font-family Helvetica 
		font-size 12px
		font-weight 300
		line-height 24px
		
.main-right-head-name
	flex(mid)
.main-right-head-name-inic
	span
		color white
		font-size 18px
	padding 5px
	background blue
	border-radius 50%
	width 45px
	height 45px
	margin-right 20px
	flex(mid)
	
.main-right-head-name-text
	font-size 14px
	font-weight 300
	line-height 24px
	
.main-right-top-tabs
	height 50px
	flex(mid)
	justify-content flex-start
	background #F3F7FA
	border-bottom 1px solid bordergrey
.main-right-top-tabs-el-active
	&:before
		content ''
		position absolute
		width 20px
		height 20px
		border-top 1px solid bordergrey
		border-right 1px solid bordergrey
		bottom -11px
		background #F3F7FA
		transform rotate(135deg)
		margin-left -10px
		left 50%
.main-right-top-tabs-el
	position relative
	flex(mid)
	padding 0 36px
	border-right 1px solid bordergrey
	height 100%
	&:hover
		cursor pointer
	span
		color black
		font-family Helvetica
		font-size 14px
		font-weight 200
.tabs-wraper
	display none
.active-tabs
	display block
.main-right-content
	padding 30px
	background white
	height calc(100% - 125px)
.service-line
	flex(mid)
.service-line-el
	flex(mid)
	flex-flow column
	height 100px
	background #F3F7FA
	border 1px solid bordergrey
	margin-right 30px
	width 25%
	&:last-child
		margin-right 0
	&:hover
		cursor pointer
.service-line-el-icon
	font-size 36px
	color blue
	margin-bottom 10px
.service-line-el-text
	font-size 14px
	font-weight 300
	color blue
.left-menu-el
	box-shadow 0px 1px 0px #3B85B5
	border-bottom 1px solid #0466AA
	padding 12px 20px
	padding-right 5px
	position relative
	&:hover
		cursor pointer
	
.left-menu-el-top
	flex(mid)
	justify-content flex-start
.left-menu-el-icon
	color white
	margin-right 20px
	.icon-My_pages
		font-size 26px
.left-menu-el-text
	color white
	
.left-menu-el-sub
	flex(mid)
	justify-content flex-start
	margin 20px 0
	color white
	padding-left 35px
	position relative
	&:before
		content ''
		position absolute
		width 20px
		height 1px
		border-top: 1px dotted white;
		left 10px
		top 50%
		margin-top -1px
		
.left-menu-el-sub-icon
	font-size 26px
	margin-right 15px
//.left-menu-el-sub-text
.left-menu-el-sub-wrap
	display none
	position relative
	&:after
		content ''
		width 1px
		height 100%
		position absolute
		top -15px
		left 10px
		border-left: 1px dotted white;
.main-right-content-wraper
	margin-top 50px
	display flex
	height calc(100% - 120px)
.col-open-message
	span(0.5)
.main-right-content-wraper-title
	font-size 16px
	font-weight 600
	line-height 24px
	margin-bottom 30px
.col-news
	span(0.25)
	padding-left 20px
	padding-right 10px
	height 100%
	border-left 1px dotted bordergrey
	border-right 1px dotted bordergrey
.col-top-message
	span(0.25)
	padding-left 20px
	padding-right 10px

.col-top-message-el
	flex(mid)
	margin-bottom 30px
.col-top-message-el-icon
	.icon-Base
		font-size 36px
		margin-right 10px
		color blue
//.col-top-message-el-text
//.col-news 
//.main-right-content-wraper-title 
.col-news-el 
	margin-bottom 20px
.col-news-el-date 
	color #989898
	font-family Helvetica
	font-size 12px
	font-weight 300
	line-height 18px
.col-news-el-title 
	font-size 14px
	color blue
	margin 5px 0
.col-news-el-text 
	font-size 13px
	line-height 18px
	
.col-open-message-el
	margin-bottom 30px
	padding-left 30px
	padding-right 10px
	position relative
.col-open-message-el-icon
	font-size 28px
	color blue
	position absolute
	top -5px
	left -10px
//.icon-Information
.col-open-message-el-date
	margin-bottom 5px
	font-size 12px
	color #62676d
.col-open-message-el-title
	span
		font-size 16px
		color blue
		margin-right 10px
	font-size 14px
	line-height 18px
.col-open-message-el-service
	flex(mid)
	justify-content flex-start
	margin 10px 0
.col-open-message-el-service-icon
	margin-right 10px
	font-size 20px
//.icon-Operator
.col-open-message-el-service-text
	color #989898
.col-open-message-el-status
	flex(mid)
.col-open-message-el-status-text
	span
		color #989898
.col-open-message-el-status-bar
	width 100%
	height 10px
	background #E5E9ED
	border-radius 3px
	position relative
.col-open-message-el-status-right
	width 55%
.col-open-message-el-status-left
	width 45%
.col-open-message-el-status-bar-val
	position absolute
	height 10px
	background #00B8DF
	border-radius  3px 0px 0px 3px
	
.main-right-content-breadcrumbs
	flex(mid)
	justify-content flex-start
	height 51px
	background #F3F7FA
	padding-left 30px
	border-bottom 1px solid bordergrey
	a
		color black
		text-decoration none
		margin-right 10px
		&:after
			content '/'
			margin-left 10px
		&:last-child
			&:after
				content ''
			color blue
			
.main-right-content-formBut
	margin-bottom 20px
	flex(mid)
	justify-content flex-start
.main-right-content-formBut-el
	margin-right 20px
	padding 10px 20px
	border 1px solid bordergrey
	background #F3F7FA
	color blue
	&:hover
		cursor pointer
.main-right-content-formBut-el-active
	background #00CD79
	border 1px solid #00C571
	color white
.main-right-formCol-wraper
	display flex
.main-right-formCol
	width 48%
	margin-right 20px
	&:nth-child(2)
		margin-right 0
.main-right-formCol-el
	margin-bottom 20px
.main-right-formCol-el-cont
	padding 20px
	background #F3F7FA
.main-right-formCol-el-title
	padding 10px
	background darkblue
	color white
	flex(mid)
	justify-content flex-start
	&:hover
		cursor pointer
.main-right-formCol-el-title-icon
	triangle : 'down' 5px white
	margin-right 10px
//.main-right-formCol-el-title-text

.main-right-formCol-el-row-half
	width 100%
	flex(mid)
	justify-content flex-start
	margin-bottom 20px
	span
		display inline-block
		width 100%
		margin-bottom 5px
		font-size 12px
	input,textarea
		width 100%
		border 1px solid bordergrey
		padding 5px
	.main-right-formCol-row-item
		width 48%
		margin-left 20px
		&:first-child
			margin-left 0
			
.main-right-formCol-el-row-full
	width 100%
	flex(mid)
	justify-content flex-start
	margin-bottom 20px
	span
		display inline-block
		width 100%
		margin-bottom 5px
		font-size 12px
	input,textarea
		border 1px solid bordergrey
		width 100%
		padding 5px
	.main-right-formCol-row-item
		width 100%
.main-right-formCol-el-file
	.main-right-formCol-el-title
		position relative
		.icon-Add
			position absolute
			right 10px
			font-size 24px
			line-height 18px
			
.main-right-formCol-el-table
	table
		table(true,true)
		th 
			font-weight 300
			
input::-ms-clear
	display: none;
